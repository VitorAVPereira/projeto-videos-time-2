  <div class="row">
    <hr />
  </div>
  <div class="container" class="col-sm-8">
    <p class="p">
   FILMES:
    </p>
  </div>
  <div class="container">
 
        <style>
          .img {
            
            border-radius: 4px;
            padding: 5px;
            width: 200px;
            height: 495px;
           
          } 
          .imgMenor {
            
            border-radius: 4px;
            padding: 5px;
            width: 300px;
            height: 400px;
           
          } 
          .body {
            font-weight: bold;
          }
          .p {
            font-size: 50px;
          }
          .alignR{
            text-align: right;
            cursor:pointer;text-decoration:underline
          }
        </style>
        <div class="row">
          <% filmes.forEach((item)=> { %>
            <div class="col-md-4">
              <a id="img" href="/single?id=<%=item.filmes_id%>">
              <div class="row">
                <h4 class="col-sm-12 mt-5 mb-2 body"><%=item.titulo%></h4>
              </div>
              <div class="row">
                <img class="col-sm-12 img" src="../imagens/<%=item.imagens%>">
              </div>
              </a>
              <button data-id="<%=item.filmes_id%>" data-titulo="<%=item.titulo%>" data-ano="<%=item.ano%>"  class="btn btn-primary bt-produto">Adicionar ao carrinho</button>
    
    
            </div>
            <% }) %>
        </div>
      </div>
  <hr />
  <section>
    <div class="container mx-auto">
      <h3 class="body">Suas preferencias: </h3>
      <br />
      <br />
    </div>

    <div class="container mx-auto row">
      <div id="rodape">
        <%let n=0
         pref.forEach((item) => { 
           
           %>
          <%if(n<3) { %>
        <a id="a" class="container mx-auto mb-3" href="singleproduto">
          
         <img class="imgMenor " src="../imagens/<%=item.imagens%>">
          
        </a>

        <%n++ } })%>
      </div>
    </div>
  </section>
  <script>
    $().ready(function(){
      console.log("jquery funfando...")
      $('.bt-produto').click(function(){
          let dataid = $(this).attr("data-id")
          let dataTitulo = $(this).attr("data-titulo")
          let dataAno = $(this).attr("data-ano")
          $.post ("/carrinho",
          {
            filmes_id:dataid,
            titulo: dataTitulo,
            qtd: 1,
            ano: dataAno,
            valor:23
          },
          function (data,status)
          {
            location.href = "/carrinho"
          },"json")
      })
    })
  </script>

