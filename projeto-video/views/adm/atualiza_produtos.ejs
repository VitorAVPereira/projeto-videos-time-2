    <!-- =============== ATUALIZA PRODUTO ================== -->
    <div class="row">
    <div class="col-md-8 col-sm-8 col-lg-8">
        <div class="card">
                <div class="card-body">
                <h4 class="card-title">Editar Produto - <%=id%></h4>
                <form id="form-produto" class="form">
                    <fieldset>
                        <legend></legend>
                    <ul class="list-unstyled">
                        <li>
                            <label>Título:</label>
                <input class="form-control" name="titulo" id="" value="<%=produtoDaVez[0].titulo%>">
                        </li>
                        <li>
                            <label>Gênero:</label>
                <input class="form-control" name="genero" id="" value="<%=produtoDaVez[0].genero%>">
                        </li>
                        <li>
                            <label>Ano:</label>
                <input class="form-control" name="ano" id="" value="<%=produtoDaVez[0].ano%>">
                        </li>
                        <li>
                            <label>sinopse:</label>
             <textarea class="form-control" name="sinopse" id=""><%=produtoDaVez[0].sinopse%></textarea>
                        </li>
                    
                        <li>
                            <label>Classificação:</label>
                <input class="form-control" name="classificacao" id="" value="<%=produtoDaVez[0].classificacao%>">
                        </li>
                        <li>
                            <label>imagens:</label>
                <input class="form-control" name="imagens" id="" value="<%=produtoDaVez[0].imagens%>">
                        </li>
                        <!-- <li>
                            <label>Valor:</label>
                <input class="form-control" name="valor" id="" value="<%=produtoDaVez[0].valor%>">
                        </li> -->
                        <li>
                            <label>Trailer:</label>
                <input class="form-control" name="trailer" id="" value="<%=produtoDaVez[0].trailer%>">
                        </li>
                        
                        <li>
                            <button type="button" class="btn btn-primary mt-5 bt-prod">Confirmar</button>
                            <button type="button" class="btn btn-primary mt-5 bt-voltar">Voltar</button>
                        </li>
                    </ul>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-sm-4">
        <img src="../imagens/<%=produtoDaVez[0].imagens%>" class="w-75" />
    </div>

<!-- =============== Fim do Atualiza Produto ================== -->

</div>
<!-- =============== FIM Conteúdo ================== -->
<script>
$().ready(function(){

    $('.bt-prod').click(function(){
        $.post('./atualiza-filme',
        {
         //sinopse,imagens,valor,titulo,id
         id:'<%=id%>',
         titulo:$('#form-produto input[name=titulo]').val(),
         genero:$('#form-produto input[name=genero]').val(),
         ano:$('#form-produto input[name=ano]').val(),
         sinopse:$('#form-produto textarea[name=sinopse]').val(),
         classificacao:$('#form-produto input[name=classificacao]').val(),
         imagens:$('#form-produto input[name=imagens]').val(),
         trailer:$('#form-produto input[name=trailer]').val()
        }, function(data,status){
            alert(data)
        })
    })


$('.bt-voltar').click(function(){
    location.href='/relatorio-produto'
    })
})

</script>
